<EditForm Model="ChangePassword">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="password">Old password</label>
        <InputText Id="password" type="password" class="form-control" @bind-Value="ChangePassword.OldPassword" />
        <ValidationMessage For="@(() => ChangePassword.OldPassword)" />
    </div>
    <div class="form-group">
        <label for="password">New password</label>
        <InputText Id="password" type="password" class="form-control" @bind-Value="ChangePassword.NewPassword" />
        <ValidationMessage For="@(() => ChangePassword.NewPassword)" />
    </div>
    <div class="form-group">
        <label for="password">Confirm new password</label>
        <InputText Id="password" type="password" class="form-control" @bind-Value="ChangePassword.ConfirmNewPassword" />
        <ValidationMessage For="@(() => ChangePassword.ConfirmNewPassword)" />
    </div>
</EditForm>


@code {
    [Parameter] public CookTool.Shared.Authentication.ChangePasswordModel ChangePassword { get; set; }
}
